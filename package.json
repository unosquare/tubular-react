{
  "name": "tubular-react",
  "version": "0.8.4",
  "description": "Unosquare Tubular React",
  "main": "dist/index.js",
  "scripts": {
    "build:docs": "parcel build ./srcdocs/index.html --no-source-maps --public-url /tubular-react/ -d ./docs",
    "build:sample": "parcel build ./sample/app/index.html --no-source-maps",
    "build": "tsc --p ./tsconfigs/tsconfig.tubular.json",
    "start": "parcel ./sample/app/index.html --open --port 9000 --no-source-maps",
    "start:docs": "parcel ./srcdocs/index.html --no-source-maps --port 8080 --open -d ./docs",
    "lint": "tslint src/**/*.ts src/**/*.tsx",
    "lint:docs": "tslint srcdocs/**/*.ts srcdocs/**/*.tsx",
    "test": "jest",
    "coverage": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "test:coveralls": "nyc npm test && nyc report --reporter=text-lcov",
    "postbuild:docs": "xcopy .\\srcdocs\\static .\\docs\\static\\",
    "poststart:docs": "xcopy .\\srcdocs\\static .\\docs\\static\\"
  },
  "jest": {
    "automock": false,
    "setupFiles": [
      "<rootDir>/test/setupTest.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/test/**/*.spec.(ts|tsx)"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": false,
        "tsConfig": "tsconfig.base.json"
      }
    }
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "test/**/*.*",
      "dist/**/*.*",
      "sample/**/*.*",
      "docs/**/*.*",
      "pages/**/*.*",
      "srcdocs/**/*.*"
    ],
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unosquare/tubular-react.git"
  },
  "author": "Unosquare",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/unosquare/tubular-react/issues"
  },
  "homepage": "https://github.com/unosquare/tubular-react#readme",
  "dependencies": {
    "@material-ui/core": "^3.9.0",
    "@material-ui/icons": "^3.0.2",
    "date-fns": "^1.30.1",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "tubular-common": "^1.4.0"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.15",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^23.3.13",
    "@types/prop-types": "^15.5.8",
    "@types/react": "^16.7.20",
    "@types/react-dom": "^16.0.11",
    "@types/react-highlighter": "^0.3.4",
    "@types/react-router": "^4.4.3",
    "@types/react-router-dom": "^4.3.1",
    "coveralls": "^3.0.2",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.8.0",
    "jest": "^23.6.0",
    "jest-fetch-mock": "^2.1.0",
    "jsdom": "^13.1.0",
    "nyc": "^13.1.0",
    "parcel-bundler": "^1.11.0",
    "parcel-plugin-clean-easy": "^1.0.2",
    "react-highlight": "^0.12.0",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.4"
  },
  "peerDependencies": {
    "react": "^15.0.0 || ^16.0.0",
    "react-dom": "^15.0.0 || ^16.0.0"
  },
  "parcelCleanPaths": [
    "dist",
    "docs/*.*"
  ]
}
