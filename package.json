{
  "name": "tubular-react",
  "version": "4.0.0",
  "description": "Unosquare Tubular React",
  "main": "dist/index.js",
  "scripts": {
    "start": "parcel ./sample/app/index.html --open --port 9000",
    "build": "tsc",
    "check": "npm run lint && npm test",
    "lint": "tsc --noEmit && eslint ./src/**/*.{js,ts,tsx} --quiet",
    "lint:fix": "eslint ./src/**/*.{js,ts,tsx} --quiet --fix",
    "test": "jest",
    "cest": "jest --collect-coverage",
    "preparepackage": "npm run build && npm run copypackage && cd dist && npm pack",
    "copypackage": "npx shx cp package.json dist"
  },
  "jest": {
    "automock": false,
    "collectCoverageFrom": [
      "./src/**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!./test/**"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/test/**/*.spec.(ts|tsx)"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": false,
        "tsConfig": "tsconfig.json"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unosquare/tubular-react.git"
  },
  "author": "Unosquare",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/unosquare/tubular-react/issues"
  },
  "homepage": "https://github.com/unosquare/tubular-react#readme",
  "dependencies": {
    "@material-ui/core": "^4.9.7",
    "@material-ui/icons": "^4.9.1",
    "react-virtualized": "^9.21.2",
    "tubular-common": "^3.1.10",
    "tubular-react-common": "1.0.19",
    "uno-react": "^0.15.1"
  },
  "devDependencies": {
    "@testing-library/react": "^10.0.1",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/jest": "^25.1.4",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@types/react-virtualized": "^9.21.8",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "jest": "^25.1.0",
    "jest-fetch-mock": "^3.0.3",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-clean-easy": "^1.0.2",
    "prettier": "^2.0.1",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3"
  },
  "parcelCleanPaths": [
    "dist/*.*"
  ]
}
