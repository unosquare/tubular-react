{
  "name": "tubular-react",
  "version": "4.0.0",
  "description": "Unosquare Tubular React",
  "main": "dist/index.js",
  "scripts": {
    "start": "parcel ./sample/app/index.html --open --port 9000",
    "build": "tsc",
    "check": "npm run lint && npm test",
    "lint": "tsc --noEmit && eslint ./src/**/*.{js,ts,tsx} --quiet",
    "lint:fix": "eslint ./src/**/*.{js,ts,tsx} --quiet --fix",
    "test": "jest",
    "cest": "jest --collect-coverage",
    "preparepackage": "npm run build && npm run copypackage && cd dist && npm pack",
    "copypackage": "npx shx cp package.json dist",
    "prettier": "prettier --check src/**/*.ts*",
    "prettier:fix": "prettier --write src/**/*.ts*",
    "codestyle:fix": "npm run lint:fix && npm run prettier:fix"
  },
  "prettier": {
    "endOfLine": "auto",
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 4
  },
  "jest": {
    "automock": false,
    "collectCoverageFrom": [
      "./src/**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!./test/**"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/test/**/*.spec.(ts|tsx)"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": false,
        "tsConfig": "tsconfig.json"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unosquare/tubular-react.git"
  },
  "author": "Unosquare",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/unosquare/tubular-react/issues"
  },
  "homepage": "https://github.com/unosquare/tubular-react#readme",
  "dependencies": {
    "@date-io/date-fns": "^2.6.2",
    "@material-ui/core": "^4.10.2",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/pickers": "^4.0.0-alpha.8",
    "@svgr/parcel-plugin-svgr": "^5.4.0",
    "clsx": "^1.1.1",
    "date-fns": "^2.14.0",
    "react-virtualized": "^9.21.2",
    "tubular-common": "^4.0.12",
    "tubular-react-common": "2.0.18",
    "uno-material-ui": "^2.0.7",
    "uno-react": "^0.16.19"
  },
  "devDependencies": {
    "@testing-library/react": "^10.4.2",
    "@testing-library/react-hooks": "^3.3.0",
    "@types/jest": "^26.0.3",
    "@types/react": "^16.9.41",
    "@types/react-dom": "^16.9.8",
    "@types/react-virtualized": "^9.21.10",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.0",
    "jest": "^26.1.0",
    "jest-fetch-mock": "^3.0.3",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-clean-easy": "^1.0.2",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.5"
  },
  "parcelCleanPaths": [
    "dist/*.*"
  ]
}
